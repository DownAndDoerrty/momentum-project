// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Campaign {
  campaignId          Int      @id @default(autoincrement())
  campaignOwnerId     Int
  campaignName        String
  campaignDescription String
  campaignPictureURL  String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  campaignOwner       User     @relation(fields: [campaignOwnerId], references: [userId])
  donations Donation[] @relation()
}

model Donation {
  donationId     Int      @id @default(autoincrement())
  donorUserId    Int
  campaignId     Int
  donationAmount Decimal
  donationNote   String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  donor          User     @relation(fields: [donorUserId], references: [userId])
  campaign  Campaign @relation(fields: [campaignId], references: [campaignId])
}

model User {
  userId            Int        @id @default(autoincrement())
  firstName         String
  lastName          String
  email             String
  passwordHash      String
  profilePictureURL String
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  donations         Donation[] @relation
  ownedCampaigns    Campaign[] @relation
}